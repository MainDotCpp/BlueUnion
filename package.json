{
  "name": "blueunion",
  "version": "1.0.0",
  "private": true,
  "description": "蓝聚出海 - 官网、发卡平台和管理后台",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:website": "pnpm --filter website dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:admin-v2": "pnpm --filter admin-v2 dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm -r build",
    "build:website": "pnpm --filter website build",
    "build:admin": "pnpm --filter admin build",
    "build:admin-v2": "pnpm --filter admin-v2 build",
    "build:api": "pnpm --filter api build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [
    "blueunion",
    "monorepo",
    "nextjs",
    "nestjs",
    "refine"
  ],
  "author": "BlueUnion",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0"
  }
}
